{
  "name": "grow-roadmaps-api",
  "version": "0.0.1",
  "author": "Marcos Nunes",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production node ./bin",
    "dev": "nodemon ./bin --exec babel-node",
    "lint": "eslint --ext .js src/",
    "migrate": "knex-migrate",
    "reset-db": "knex-migrate down --to 0 && knex-migrate up && knex seed:run",
    "clean": "rm -rf dist && mkdir dist",
    "build": "yarn clean && babel src --out-dir dist --copy-files",
    "test": "jest --runInBand --forceExit"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)",
      "**/?(*.)(spec|test).js?(x)"
    ],
    "globalSetup": "./__tests__/setup.js",
    "globalTeardown": "./__tests__/teardown.js"
  },
  "dependencies": {
    "apollo-errors": "^1.9.0",
    "apollo-resolvers": "^1.4.1",
    "apollo-server-express": "^2.0.6",
    "body-parser": "^1.18.2",
    "chalk": "^2.4.0",
    "connect-session-knex": "^1.4.0",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-session": "^1.16.1",
    "graphql": "^14.0.2",
    "graphql-tools": "^3.1.1",
    "helmet": "^3.12.0",
    "knex": "^0.19.5",
    "knex-cleaner": "^1.1.4",
    "knex-migrate": "^1.7.2",
    "merge-graphql-schemas": "^1.5.3",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-github": "^1.1.0",
    "pg": "^7.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.4",
    "babel-jest": "^24.8.0",
    "eslint": "^4.19.1",
    "jest": "^24.8.0",
    "nodemon": "^1.12.1",
    "supertest": "^3.0.0"
  }
}
