  "author": "Marcos Nunes",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production node ./bin",
    "dev": "nodemon ./bin --exec babel-node",
    "lint": "eslint --ext .js src/",
    "clean": "rm -rf dist && mkdir dist",
    "build": "yarn clean && babel src --out-dir dist --copy-files"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)",
      "**/?(*.)(spec|test).js?(x)"
    ],
    "setupFiles": [
      "./__tests__/testHelper.js"
    ]
  },
  "dependencies": {
    "@types/node": "^10.12.20",
    "apollo-errors": "^1.9.0",
    "apollo-resolvers": "^1.4.1",
    "apollo-server-express": "^2.0.6",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
    "chalk": "^2.4.0",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "graphql": "^14.0.2",
    "graphql-tools": "^3.1.1",
    "helmet": "^3.12.0",
    "merge-graphql-schemas": "^1.5.3",
    "morgan": "^1.9.0",
    "node": "^11.4.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.5.0",
    "pg-hstore": "^2.3.2",
    "request": "^2.88.0",
    "sequelize": "^4.38.0",
    "subscriptions-transport-ws": "^0.9.15",
    "umzug": "^2.1.0",
    "uuid": "^3.3.2",
    "xml": "^1.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.19.1",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "nodemon": "^1.12.1",
    "supertest": "^3.0.0"
  }
}